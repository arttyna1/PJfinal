<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".HomrFragment"
    android:orientation="vertical"
    >
    <EditText
        style="@style/Font_family_light"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_style2"
        android:drawableLeft="@drawable/glass"
        android:drawablePadding="@dimen/padding_16"
        android:hint="ค้นหาร้านที่ต้องการ"
        android:inputType="text"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="@dimen/padding_16"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_20"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        />

    <Button
        android:id="@+id/button5"
        android:hint="ค้า"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="ค้นหาร้านใกล้เคียง"
        android:layout_gravity="center"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button5"
        android:layout_gravity="center"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>